{
  "name": "finances_tracker",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@10.15.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "eslint": "^9.35.0",
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "typescript": "^5.9.2"
  },
  "scripts": {
    "dev": "turbo run dev",
    "dev:api": "pnpm --filter api dev",
    "dev:web": "pnpm --filter web dev",
    "build": "turbo run build",
    "clean": "turbo run clean",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@ts-rest/core": "^3.52.1",
    "@ts-rest/nest": "^3.52.1",
    "@ts-rest/open-api": "^3.52.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "zod": "3.22.4"
  }
}
